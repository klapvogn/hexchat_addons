[Unit]
Description=ZNC Log Search Web Interface
After=network.target

[Service]
Type=simple
User=<USERNAME>
WorkingDirectory=/home/<USERNAME>/apps/znc_log_search
Environment="PATH=/home/<USERNAME>/venvs/HexChat-Search/bin"
ExecStart=/home/<USERNAME>/venvs/HexChat-Search/bin/gunicorn -w 4 -b 0.0.0.0:5000 app:app
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target